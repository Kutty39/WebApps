package com.blbz.webapageapp.serviceimp;

import static com.blbz.webapageapp.model.WebPageAppModel.getDb;

import javax.servlet.http.HttpServletRequest;

import com.blbz.webapageapp.service.WebPageApp;

public class WebPageAppImpl implements WebPageApp {
	@Override
	public boolean emailchecker(String email) {
		return getDb().checkStatement("select * from user_info where user_email='" + email+"'");
	}

	@Override
	public boolean registerUser(HttpServletRequest request) {
		String sql="insert into user_info (user_fname,user_lname,user_address,user_phn,user_pass,user_email)values(?,?,?,?,?,?)";
		System.out.println(request.getParameter("eid"));
		int i= getDb().registerUSer(sql, request);
		return i>0;
	}
}
